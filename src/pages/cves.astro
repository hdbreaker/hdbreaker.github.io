    <style>
      /* Reset and base styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #333;
        background: linear-gradient(135deg, #00ff88 0%, #00cc6a 100%);
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
      }

      /* Header styles */
      .header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem 0;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .back-link {
        display: inline-block;
        color: white;
        text-decoration: none;
        margin-bottom: 1rem;
        font-weight: 500;
        transition: opacity 0.3s ease;
      }

      .back-link:hover {
        opacity: 0.8;
      }

      .header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
      }

      .header p {
        color: #e0e0e0;
        font-size: 1.1rem;
      }

      /* Section styles */
      .section {
        background: rgba(255, 255, 255, 0.95);
        margin-bottom: 2rem;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        backdrop-filter: blur(10px);
      }

      .section h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #2d3748;
        border-bottom: 3px solid #00ff88;
        padding-bottom: 0.5rem;
      }

      /* Stats grid */
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
      }

      .stat-item {
        text-align: center;
        background: rgba(0, 255, 136, 0.1);
        padding: 2rem;
        border-radius: 15px;
        border: 1px solid rgba(0, 255, 136, 0.3);
      }

      .stat-number {
        font-size: 3rem;
        font-weight: 700;
        color: #00cc6a;
        margin-bottom: 0.5rem;
      }

      .stat-label {
        color: #4a5568;
        font-size: 1.1rem;
        font-weight: 500;
      }

      /* CVEs grid */
      .cves-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
      }

      .cve-item {
        background: rgba(255, 255, 255, 0.95);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        border-left: 4px solid #00ff88;
      }

      .cve-item.high {
        border-left-color: #e53e3e;
      }

      .cve-item.medium {
        border-left-color: #d69e2e;
      }

      .cve-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
      }

      .cve-header h3 {
        font-size: 1.5rem;
        color: #2d3748;
        margin: 0;
      }

      .severity {
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        color: white;
      }

      .severity.high {
        background: #e53e3e;
      }

      .severity.medium {
        background: #d69e2e;
      }

      .cve-description {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        color: #4a5568;
        line-height: 1.6;
      }

      .cve-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .detail-item {
        background: rgba(0, 255, 136, 0.1);
        padding: 0.8rem;
        border-radius: 8px;
        border: 1px solid rgba(0, 255, 136, 0.3);
      }

      .detail-item strong {
        color: #00cc6a;
        display: block;
        margin-bottom: 0.2rem;
        font-size: 0.9rem;
      }

      .cve-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .tag {
        background: rgba(0, 255, 136, 0.2);
        color: #00cc6a;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
      }

      .cve-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .cve-link {
        background: linear-gradient(135deg, #00ff88 0%, #00cc6a 100%);
        color: white;
        padding: 0.6rem 1.2rem;
        text-decoration: none;
        border-radius: 20px;
        font-weight: 500;
        transition: all 0.3s ease;
        font-size: 0.9rem;
      }

      .cve-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      }

      /* Research areas */
      .research-areas {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
      }

      .research-area {
        background: rgba(0, 255, 136, 0.1);
        padding: 2rem;
        border-radius: 15px;
        border: 1px solid rgba(0, 255, 136, 0.3);
      }

      .research-area h3 {
        color: #00cc6a;
        margin-bottom: 1rem;
        font-size: 1.3rem;
      }

      .research-area p {
        color: #4a5568;
        margin-bottom: 1.5rem;
        line-height: 1.6;
      }

      .area-stats {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .area-stats span {
        background: rgba(0, 255, 136, 0.2);
        color: #00cc6a;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.9rem;
        font-weight: 500;
      }

      /* Disclosure practices */
      .disclosure-practices {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
      }

      .practice-item {
        background: rgba(0, 255, 136, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        border: 1px solid rgba(0, 255, 136, 0.3);
        text-align: center;
      }

      .practice-item h3 {
        color: #00cc6a;
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
      }

      .practice-item p {
        color: #4a5568;
        font-size: 1rem;
      }

      /* Tools grid */
      .tools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 1.5rem;
      }

      .tool-category {
        background: rgba(0, 255, 136, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        border: 1px solid rgba(0, 255, 136, 0.3);
      }

      .tool-category h3 {
        color: #00cc6a;
        margin-bottom: 1rem;
        font-size: 1.2rem;
      }

      .tool-category ul {
        list-style: none;
      }

      .tool-category li {
        padding: 0.3rem 0;
        color: #4a5568;
        position: relative;
        padding-left: 1rem;
      }

      .tool-category li::before {
        content: '‚Ä¢';
        color: #00ff88;
        position: absolute;
        left: 0;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .container {
          padding: 1rem;
        }
        .header h1 {
          font-size: 2rem;
        }
        .cves-grid {
          grid-template-columns: 1fr;
        }
        .cve-header {
          flex-direction: column;
          align-items: flex-start;
          gap: 0.5rem;
        }
        .cve-details {
          grid-template-columns: 1fr;
        }
        .cve-links {
          flex-direction: column;
        }
        .research-areas, .disclosure-practices, .tools-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </body>
</html> 