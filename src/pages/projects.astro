---
// Projects page
const title = "Projects - Alejandro Parodi";
const description = "Offensive security tools, frameworks, and research projects";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <a href="/" class="back-link">‚Üê Back to Portfolio</a>
        <h1>Offensive Security Projects</h1>
        <p>Tools, frameworks, and research projects focused on offensive security</p>
      </header>

      <div class="projects-container">
        <!-- Nimhawk Framework -->
        <div class="project-item featured">
          <div class="project-header">
            <h2>Nimhawk Framework</h2>
            <span class="project-status">Active Development</span>
          </div>
          <p class="project-description">
            Advanced C4 (Command & Control) framework written in Nim with reflective .NET execution, direct syscalls for evasion, and encrypted communication between implants. Designed for advanced red team operations and security research.
          </p>
          <div class="project-details">
            <div class="detail-item">
              <strong>Language:</strong> Nim
            </div>
            <div class="detail-item">
              <strong>Architecture:</strong> Modular C2 Framework
            </div>
            <div class="detail-item">
              <strong>Features:</strong> Reflective .NET, Direct Syscalls, Encrypted Comms
            </div>
            <div class="detail-item">
              <strong>Status:</strong> In Development
            </div>
          </div>
          <div class="project-tags">
            <span class="tag">C2 Framework</span>
            <span class="tag">Nim</span>
            <span class="tag">Red Team</span>
            <span class="tag">Evasion</span>
          </div>
          <div class="project-links">
            <a href="https://github.com/hdbreaker/Nimhawk" class="project-link">View on GitHub</a>
            <a href="/research/nimhawk-framework-overview" class="project-link">Documentation</a>
          </div>
        </div>

