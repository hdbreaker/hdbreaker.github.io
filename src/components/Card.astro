---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')

if (imagePath) {
	if (!images[imagePath])
		throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`)
}
---

<Tag
	class={cn(
		className,
		'relative rounded-2xl border border-[#57FD6B]/20 bg-[#1A1A1A]/50 px-6 py-4 backdrop-blur-sm',
		href && 'transition-all hover:border-[#57FD6B]/40 hover:shadow-volt-soft'
	)}
	href={href}
>
	{
		imagePath && (
			<Image
				src={images[imagePath]()}
				alt={altText}
				class={cn('mb-4 md:absolute md:mb-0', imageClass)}
				loading='eager'
			/>
		)
	}
	<div class='flex flex-col gap-y-2'>
		<div class='flex flex-col gap-y-1'>
			<h1 class='text-lg font-medium text-[#F5F5F5]'>{heading}</h1>
			<h2 class='text-[#57FD6B] font-medium'>{subheading}</h2>
			<h2 class='text-[#A0A0A0] text-sm'>{date}</h2>
		</div>
		<slot />
	</div>
</Tag>
