---
import Button from './Button.astro'
const { title, skills } = Astro.props
---

<div class='flex flex-col gap-y-4 md:flex-row md:gap-x-6 md:gap-y-0'>
	<h3 class='w-1/5 font-medium text-[#F5F5F5] text-lg'>{title}</h3>
	<div class='flex w-4/5 flex-row flex-wrap gap-x-3 gap-y-3'>
		{skills.map((skill: string[]) => <Button as='button' title={skill} style='pill' class='bg-[#57FD6B]/10 border-[#57FD6B]/30 text-[#57FD6B] hover:bg-[#57FD6B]/20' />)}
	</div>
</div>
