---
import { cn } from '@/utils'

const { class: className, title } = Astro.props
---

<section class={cn(className, 'flex flex-col gap-y-8 md:flex-row md:gap-y-0')}>
	<div class='text-2xl font-semibold md:w-1/3'>
		<h2 class='text-[#F5F5F5]'>{title}</h2>
	</div>
	<div class='flex flex-col gap-y-4 md:w-2/3'>
		<slot />
	</div>
</section>
